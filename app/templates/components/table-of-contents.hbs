{{!-- #{build_toc_for(pages)} --}}
{{#each data as |page|}}
  {{#unless page.skipToc}}
    <li class={{tocLevel}}>
      {{#if page.pages}}
        {{#cp-panel as |p|}}
          {{#p.toggle}}
            {{page.title}}
          {{/p.toggle}}

          {{#p.body}}
            {{table-of-contents data=page.pages level=(inc level)}}
          {{/p.body}}
        {{/cp-panel}}

      {{else}}
        {{#link-to 'version.show' page.url}}
          {{page.title}}
        {{/link-to}}
      {{/if}}
    </li>
  {{/unless}}
{{/each}}
